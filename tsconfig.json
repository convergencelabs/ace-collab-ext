{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "outDir": "dist",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "baseUrl": "./src/ts",
    "lib": ["dom", "es6", "es7"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "dist",
    "example"
  ]
}